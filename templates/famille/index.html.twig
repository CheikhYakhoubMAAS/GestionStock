{% extends 'template.html.twig' %}

{% block title %}Famille index{% endblock %}

{% block body %}
   <div class="container">
      <div class="panel panel-primary">
        <div class="panel-heading">
         <i class="icon_menu"></i>Liste Famille
         </div>
          <div class="panel-body">
  


    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for famille in familles %}
            <tr>
                <td>{{ famille.id }}</td>
                <td>{{ famille.libelle }}</td>
                <td>
                 <a href="{{ path('famille_show', {'id': famille.id}) }}"" 
                class="btn btn-success">show</a>
                 </td>
                  <td>
                  
                    <a href="{{ path('famille_edit', {'id': famille.id}) }}"" 
                class="btn btn-warning">edit</a>
                </td>
                   
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('famille_new') }}"class = "btn btn-primary">Create new</a>
</div>
</div>
</div>
{% endblock %}
