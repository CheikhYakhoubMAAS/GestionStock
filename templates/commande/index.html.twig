{% extends 'template.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
      <div class="container">
      <div class="panel panel-primary">
        <div class="panel-heading">
         <i class="icon_menu"></i>Liste Commande
         </div>
          <div class="panel-body">
  


    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numc</th>
                <th>Date</th>
                <th>Tht</th>
                <th>Ttva</th>
                <th>Tttc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numc }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.tht }}</td>
                <td>{{ commande.ttva }}</td>
                <td>{{ commande.tttc }}</td>
                <td>
                <a href="{{ path('commande_show', {'id': commande.id}) }}"" 
                class="btn btn-success">show</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}"" 
                class="btn btn-warning">edit</a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  <a href="{{ path('commande_new') }}"class = "btn btn-primary">Create new</a>

     </div>
      </div>
         </div>
{% endblock %}
