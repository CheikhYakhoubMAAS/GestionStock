{% extends 'template.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
 <div class="container">
      <div class="panel panel-primary">
        <div class=" panel-heading">
         <i class="icon_menu"></i>Liste Produit
         </div>
          <div class="panel-body">
  

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Prix Achat</th>
                <th>Prix Vente</th>
                <th>Tva</th>
                <th>Stock</th>
              
               
                <th>Famille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.pa }}</td>
                <td>{{ produit.pv }}</td>
                <td>{{ produit.tva }}</td>
                <td>{{ produit.stock }}</td>
               
              
                <td>{{ produit.Famille.libelle }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}"class="btn btn-success">show</a>
                      </td>
                    <td>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}"class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}"class = "btn btn-primary">Create new</a>
   </div>
      </div>
         </div>
{% endblock %}
